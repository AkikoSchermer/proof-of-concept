{% render 'partials/head.liquid' %}

<ul>
  {% for user in users %}
    <li>
      <h2>{{ user.name }}</h2>
      <p>{{ user.email }}</p>

      {% if user.avatars and user.avatars[0] %}
        <picture>
          <source type="image/avif" srcset="{{ user.avatars.[0] }}?format=avif">
          <source type="image/webp" srcset="{{ user.avatars.[0] }}?format=webp">
          <img
            src="{{ user.avatars.[0] }}"
            alt="profielfoto van {{ user.name }}"
            width="400"
            height="300">
        </picture>
      {% else %}
        <p>
          Geen afbeelding beschikbaar
        </p>
      {% endif %}
    </li>
  {% endfor %}
</ul>

{% render 'partials/foot.liquid' %}